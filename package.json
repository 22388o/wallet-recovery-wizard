{
  "name": "BitGoWalletRecoveryWizard",
  "author": "BitGo, Inc.",
  "description": "A UI-based desktop app for BitGo Recoveries",
  "version": "2.7.5",
  "main": "build/electron.js",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development NODE_OPTIONS=--max-old-space-size=4096 BROWSER=none concurrently 'react-scripts start' 'node scripts/electron-wait-react'",
    "electron": "electron .",
    "build": "NODE_ENV=production NODE_OPTIONS=--max-old-space-size=4096 GENERATE_SOURCEMAP=false react-scripts build",
    "pack": "build && ./node_modules/.bin/electron-builder --dir",
    "lint": "eslint --ext .js src",
    "check-fmt": "prettier --check .",
    "apply-fmt": "prettier --write ."
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "bitgo": "11.8.0-rc.3",
    "bitgo-utxo-lib": "^1.8.0",
    "bootstrap": "^4.5.3",
    "jszip": "3.1.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-router-dom": "4.3.1",
    "react-scripts": "4.0.1",
    "react-select": "1.3.0",
    "react-transition-group": "2.5.3",
    "reactstrap": "6.5.0",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "9.2.1",
    "electron-builder": "^22.9.1",
    "eslint-config-prettier": "^6.15.0",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "build": {
    "appId": "com.bitgo.WalletRecoveryWizard",
    "directories": {
      "buildResources": "resources",
      "app": "app"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "icons/mac/appicon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/win/appicon.ico"
    },
    "linux": {
      "target": "deb",
      "maintainer": "support@bitgo.com",
      "icon": "icons/png"
    }
  }
}
