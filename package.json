{
  "name": "wallet-recovery-wizard",
  "description": "An UI-based desktop app for BitGo Recoveries",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build-react": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "dev": "nf start",
    "electron": "electron .",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "build-all": "./node_modules/.bin/electron-packager ./ --out='./build' --name='BitGo Wallet Recovery Wizard' --platform=all --arch=all --overwrite",
    "build-windows": "./node_modules/.bin/electron-packager ./ --out='./build' --name='BitGo Wallet Recovery Wizard' --platform=win32 --arch=x64 --overwrite",
    "build-mac": "./node_modules/.bin/electron-packager ./ --out='./electron-build' --name='BitGo Wallet Recovery Wizard' --platform=darwin --arch=all --overwrite; cd build/bitgo-recovery-wizard-darwin-x64/bitgo-recovery-wizard.app/Contents/Resources/app; yarn install --ignore-engines; cd ..; asar pack app app.asar; rm -rf app; cd ./",
    "build-mac-test": "./node_modules/.bin/electron-packager ./ --out='./build' --name='BitGo Wallet Recovery Wizard' --platform=darwin --arch=all --overwrite; cd build/bitgo-recovery-wizard-darwin-x64/bitgo-recovery-wizard.app/Contents/Resources/app; yarn install --ignore-engines; cd ./",
    "build-linux": "./node_modules/.bin/electron-packager ./ --out='./build' --name='BitGo Wallet Recovery Wizard' --platform=linux --arch=all --overwrite",
    "build-clean": "rm -rf ./build/*"
  },
  "dependencies": {
    "bitcoinjs-lib": "^3.3.2",
    "bitgo": "^4.19.1",
    "bluebird": "^3.5.1",
    "bootstrap": "4.0.0",
    "buffer": "^5.0.8",
    "classnames": "^2.2.5",
    "dns": "^0.2.2",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-tx": "^1.3.3",
    "ethereumjs-util": "^5.1.4",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "prova-lib": "^0.2.9",
    "react": "^16.2.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.2.0",
    "react-mailto": "^0.4.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.0",
    "react-select": "^1.2.1",
    "react-transition-group": "^2.2.1",
    "reactstrap": "^5.0.0-beta",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "request-promise": "^4.2.2",
    "sjcl": "^1.0.7",
    "superagent": "^3.8.2",
    "superagent-as-promised": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^1.7.12",
    "electron-builder": "^19.56.0",
    "electron-packager": "^11.0.0",
    "foreman": "^2.0.0",
    "node-sass-chokidar": "^0.0.3"
  }
}
